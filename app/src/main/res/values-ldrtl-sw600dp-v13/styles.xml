        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="QebContainerStyle">
        <item name="android:layout_gravity">bottom|center|left</item>
        <item name="android:layout_width">@dimen/qeb_tablet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24.0dip</item>
        <item name="android:layout_marginBottom">24.0dip</item>
    </style>
    <style name="Qeb">
        <item name="android:background">@drawable/qeb_shadow</item>
        <item name="android:paddingLeft">@dimen/qeb_padding_end</item>
        <item name="android:paddingRight">@dimen/qeb_padding_start</item>
    </style>
